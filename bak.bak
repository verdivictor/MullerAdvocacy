@import url('https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

.Toastify__toast-container {
  z-index: 9999;
}

@layer base {
  :root {
    /* Base light theme */
    --background: 0 0% 100%;          /* white */
    --foreground: 0 0% 5%;           /* soft black */

    --card: 0 0% 98%;
    --card-foreground: 0 0% 5%;

    --popover: 0 0% 98%;
    --popover-foreground: 0 0% 5%;

    --primary: 0 0% 7%;              /* #111 from Presentation bg */
    --primary-foreground: 0 0% 98%;  /* off-white text */

    --secondary: 0 84% 60%;          /* strong red (Presentation accents) */
    --secondary-foreground: 0 0% 98%;

    --muted: 0 0% 96%;
    --muted-foreground: 0 0% 45%;

    --accent: 46 63% 54%;            /* gold accent */
    --accent-foreground: 0 0% 5%;

    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 98%;

    --border: 0 0% 20%;
    --input: 0 0% 20%;
    --ring: 46 63% 54%; /* gold ring */

    --radius: 0.75rem;

    /* Brand palette from Presentation */
    --brand-dark: 0 0% 7%;    /* #111 background */
    --brand-red: 0 84% 60%;   /* highlight red */
    --brand-gold: 46 63% 54%; /* highlight gold */
    --brand-white: 0 0% 98%;  /* text white */
  }

  .dark {
    --background: 0 0% 8%;
    --foreground: 0 0% 98%;

    --card: 0 0% 12%;
    --card-foreground: 0 0% 98%;

    --popover: 0 0% 12%;
    --popover-foreground: 0 0% 98%;

    --primary: 0 0% 98%;
    --primary-foreground: 0 0% 8%;

    --secondary: 0 84% 60%;
    --secondary-foreground: 0 0% 8%;

    --muted: 0 0% 15%;
    --muted-foreground: 0 0% 65%;

    --accent: 46 63% 54%;
    --accent-foreground: 0 0% 8%;

    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 98%;

    --border: 0 0% 20%;
    --input: 0 0% 20%;
    --ring: 46 63% 54%;

    --brand-dark: 0 0% 98%;
    --brand-red: 0 84% 60%;
    --brand-gold: 46 63% 54%;
    --brand-white: 0 0% 8%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
}



